 // swap arr[i][j] with arr[j][j] = to j = i+1;
 // reverse the entire array

int n = matrix.size();
       
          for(int i = 0;i<n;i++){
              for(int j = i+1;j<n;j++){
                  swap(matrix[i][j] , matrix[j][i]);
              }
          }
          
          for(int i = 0;i<n;i++)
          reverse(matrix[i].begin() , matrix[i].end());
